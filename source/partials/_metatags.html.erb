<% content_for :meta_tags do %>
<!-- Place this data between the <head> tags of your website -->
<title><%= meta_title %></title>
<meta name="description" content="<%= meta_desc %>" />

<!-- Twitter Card data -->
<meta name="twitter:card" value="summary_large_image">
<meta name="twitter:site" content="@SheffieldHosp">
<meta name="twitter:title" content="<%= sm_title %>">
<meta name="twitter:description" content="<%= meta_desc %>">
<meta name="twitter:image" content="<%= sm_image %>">

<!-- Open Graph data -->
<meta property="og:title" content="<%= sm_title %>" />
<meta property="og:type" content="article" />
<meta property="og:url" content="<%= og_url %>" />
<meta property="og:image" content="<%= sm_image %>" />
<meta property="og:description" content="<%= meta_desc %>" />

<!--
  In your page you pass these as hashes
  partial "partials/metatags", locals: { 
                                         meta_title: "Page Title. Maximum length 60-70 characters",
                                         meta_desc: "Page description. No longer than 155 characters",
                                         
                                         sm_title: "",
                                         sm_image: "",
                                         og_url: ""
                                        } 
-->
<% end %>